<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.joon8_000.myapplication.user.HomePageActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <TextView android:text="@string/logo_intro" android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Get Meals"
        android:textSize="20dp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="openMeals"
        android:background="@color/bright_foreground_material_dark"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="View Profile"
        android:textSize="20dp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="viewUserProfile"
        android:background="@color/bright_foreground_material_dark"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="About"
        android:textSize="20dp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="openAbout"
        android:background="@color/bright_foreground_material_dark"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Create Profile"
        android:textSize="20dp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="createUserProfile"
        android:background="@color/bright_foreground_material_dark"/>

</LinearLayout>
